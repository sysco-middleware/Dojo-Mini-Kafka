[Unit]
Description=Apache Kafka
Requires=zookeeper.service
After=zookeeper.service
[Service]
Type=simple
User= {{ KAFKA_USER }}
Group= {{ KAFKA_GROUP}}
ExecStart={{ BASE }}/bin/kafka-server-start.sh {{ BASE }}/config/server.properties
ExecStop={{ BASE }}/bin/kafka-server-stop.sh
[Install]
WantedBy=multi-user.target
